# Защита админ-панели
# Разрешаем доступ только к публичным файлам

# Блокируем прямой доступ к includes
<FilesMatch "^(auth|header|footer)\.php$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Защита от директорной индексации
Options -Indexes

# Редирект на login.php для неавторизованных
RewriteEngine On
RewriteCond %{REQUEST_URI} ^/admin/$
RewriteRule ^(.*)$ /admin/dashboard.php [R=302,L]

# Кастомные страницы ошибок
ErrorDocument 403 /403.php
ErrorDocument 404 /404.php
